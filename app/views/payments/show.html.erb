<%- model_class = Payment -%>
<div class="page-header">
  <h1>
    <%=t '.title', :default => model_class.model_name.human %>
    <small> for <%= @user.name %></small>
  </h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:amount) %>:</strong></dt>
  <dd><%= @payment.amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:paid_amount) %>:</strong></dt>
  <dd><%= @payment.paid_amount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:discount) %>:</strong></dt>
  <dd><%= @payment.discount %></dd>
  <dt><strong><%= model_class.human_attribute_name(:created_by) %>:</strong></dt>
  <dd><%= @payment.creator.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:modified_by) %>:</strong></dt>
  <dd><%= @payment.modifier.name rescue '-' %></dd>
</dl>

<div class="form-actions">
  <% if params[:patiend_id] %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                patient_payments_path, :class => 'btn' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_patient_payment_path(@user, @payment), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                patient_payment_path(@user, @payment),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% else %>
    <%= link_to t('.back', :default => t("helpers.links.back")),
                supplier_payments_path, :class => 'btn' %>
    <%= link_to t('.edit', :default => t("helpers.links.edit")),
                edit_supplier_payment_path(@user, @payment), :class => 'btn' %>
    <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                supplier_payment_path(@user, @payment),
                :method => 'delete',
                :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                :class => 'btn btn-danger' %>
  <% end -%>
</div>
