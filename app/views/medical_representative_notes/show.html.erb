<%- model_class = MedicalRepresentativeNote -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %> <small>for <%= @practitioner.name %></small></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:rep_name) %>:</strong></dt>
  <dd><%= @medical_representative_note.rep_name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rep_company) %>:</strong></dt>
  <dd><%= @medical_representative_note.rep_company %></dd>
  <dt><strong><%= model_class.human_attribute_name(:rep_phone) %>:</strong></dt>
  <dd><%= @medical_representative_note.rep_phone %></dd>
  <dt><strong><%= model_class.human_attribute_name(:notes) %>:</strong></dt>
  <dd>
    <ul>
      <% @medical_representative_note.notes.split(/$/).each do |note| %>
        <li><%= note %></li>
      <% end -%>
    </ul>
  </dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              practitioner_medical_representative_notes_path(@practitioner), :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_practitioner_medical_representative_note_path(@practitioner, @medical_representative_note), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              practitioner_medical_representative_note_path(@practitioner, @medical_representative_note),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
