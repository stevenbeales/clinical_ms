<%= form_for [@appointment.patient, @appointment, @vital], :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', :resource => @vital %>

  <div class="control-group">
    <%= f.label :height, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :height, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :weight, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :weight, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :blood_pressure, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :blood_pressure, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sugar_level, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :sugar_level, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :temperature, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :temperature, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                patient_appointments_path(@appointment.patient), :class => 'btn' %>
  </div>
<% end %>
