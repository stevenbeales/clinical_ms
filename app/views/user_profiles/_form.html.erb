<%= form_for @user_profile, :html => { :class => 'form-horizontal' } do |f| %>
  <%= render 'shared/error_messages', :resource => @user_profile %>

  <div class="control-group">
    <label class="control-label">Email</label>
    <div class="controls muted"><%= current_user.email %></div>
  </div>
  
  <%= render :partial => "user_profiles/profile_fields", :locals => { :f => f } %>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                dashboard_path, :class => 'btn' %>
  </div>
<% end %>
