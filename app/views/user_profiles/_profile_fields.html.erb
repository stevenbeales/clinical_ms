<div class="control-group">
  <%= f.label :name, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :name, :class => 'text_field', :maxlength => 50 %>
  </div>
</div>
<div class="control-group">
  <%= f.label :gender, :class => 'control-label' %>
  <div class="controls">
    <%= f.select :gender, [['Male'], ['Female']], { :prompt => "Select gender" } %>
  </div>
</div>
<div class="control-group">
  <%= f.label :date_of_birth, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :date_of_birth, { :value => "#{ f.object.date_of_birth.nil? ? Date.today : f.object.date_of_birth }", "data-behaviour" => "datepicker" } %>
  </div>
</div>
<div class="control-group">
  <%= f.label :phone, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_field :phone %>
  </div>
</div>
<div class="control-group">
  <%= f.label :address, :class => 'control-label' %>
  <div class="controls">
    <%= f.text_area :address, { :rows => 5 } %>
  </div>
</div>
