<tr class="fields">
  <td class="inventory_supplier_id">
  	<%= f.select :purchase_inventories_supplier_id, PurchaseInventoriesSupplier.all.map { |pi| ["#{pi.name + " by " + pi.supplier.name}", pi.id] }, { :prompt => "Select inventory" } %>
  </td>
	<td><%= f.text_field :quantity, { :class => "quantity input-small" } %></td>
  <td><%= f.text_field :cost, { :readonly => true, :class => "cost input-small" } %></td>
  <td><%= f.link_to_remove "Remove", :class => "btn-small btn-primary" %></td>
</tr>
